        for (const card of cards) {
          const slideshow = card.querySelector?.('.card-gallery slideshow-component');
          if (!slideshow) continue;
          // The slides are <li> elements; we want the second one (index 1)
          const slides = slideshow.querySelectorAll(':scope li');
