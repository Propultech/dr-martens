        // The grid is a <ul ref="grid"> with class product-grid
        const grid = document.querySelector('.product-grid[ref="grid"]');
        if (!grid) return;

        gridObserver = new MutationObserver((mutations) => {
          if (currentView === 'product') return;

          const newCards = [];
